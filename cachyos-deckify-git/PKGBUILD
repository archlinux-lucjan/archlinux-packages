pkgname=cachyos-deckify-git
gitname=CachyOS-Deckify
pkgver=20240427.r62.g087ca4f
pkgrel=1
groups=('cachyos')
arch=('any')
license=('GPL')
pkgdesc='CachyOS - Deckify'
source=("git+https://github.com/CachyOS/$gitname")
install="$pkgname.install"
options=(!strip !debug)
sha256sums=('SKIP')
depends=('gamescope-plus' 'mangohud' 'cachyos-gaming-meta' 'gamescope-session-steam-git' 'gamescope-session-git' 'chimeraos-device-quirks-git'
         'inputplumber' 'asusctl' 'scx-scheds' 'qt5-tools')
makedepends=('git')

pkgver() {
  cd $gitname
  echo "$(git show --format='%cI' -q main | sed 's/T.*//g;s/-//g').r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}

package() {
  install -d "$pkgdir/etc"
  cp -rf "${srcdir}/${gitname}/etc" "$pkgdir"
  install -d "$pkgdir/usr"
  cp -rf "${srcdir}/${gitname}/usr" "$pkgdir"
}
