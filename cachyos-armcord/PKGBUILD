pkgname=cachyos-armcord
pkgdesc="ArmCord fork by CachyOS and maintained by nextwork, custom client designed to enhance your Discord experience while keeping everything lightweight."
pkgver=20231009.r1014.gd7c16e2
pkgrel=2
arch=("x86_64")
url="https://github.com/NextWork123/ArmCord"
license=("custom:OSL-3.0")
makedepends=("git" "nodejs" "npm" "libxcrypt-compat")
optdepends=(
  'libnotify: Notifications'
  'xdg-utils: Open links, files, etc'
)
provides=("armcord")
conflicts=("armcord")
source=(
  "${pkgname}::git+${url}.git"
)
sha256sums=('SKIP')

pkgver() {
  cd "$pkgname"
  echo "$(git show --format='%cI' -q dev | sed 's/T.*//g;s/-//g').r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"

  npx pnpm install --frozen-lockfile --ignore-scripts
  npm install electron@beta
  npm run build && npx electron-builder --linux pacman

  bsdtar -xf "dist/ArmCord-3.3.0.pacman" -C "$srcdir"
}

package() {
  cd "$srcdir"

  cp -r opt "$pkgdir/"
  cp -r usr "$pkgdir/"
}
