pkgname=strawberry-git
_pkgname=strawberry
pkgver=0.6.12.4.g9a5f6c7b
pkgrel=1
pkgdesc="Bitperfect audio player and music collection organizer, fork of Clementine. gstreamer engine only"
arch=('x86_64')
url="http://www.strawbs.org/"
license=(GPL3)
depends=('chromaprint' 'protobuf' 'gst-plugins-base' 'gst-plugins-good' 'qt5-base' 'qt5-x11extras'
         'sqlite3' 'dbus' 'alsa-lib' 'libcdio' 'taglib')
#depends+=('libimobiledevice' 'libplist' 'libusbmuxd' 'libgpod' 'libmtp' 'phonon-qt5' 'vlc' 'xine-lib')
makedepends=('git' 'cmake' 'boost')
optdepends=('gst-plugins-bad'
            'gst-plugins-ugly')
provides=('strawberry')
conflicts=('strawberry' 'strawberry-full-git')
source=("git://github.com/jonaski/strawberry.git")
sha256sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  git describe --long --tags | sed 's/^v//;s/-/./g'
}

build() {
  cmake -B build -S $_pkgname \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DUSE_SYSTEM_TAGLIB=ON \
    -DENABLE_IMOBILEDEVICE=OFF \
    -DENABLE_LIBGPOD=OFF \
    -DENABLE_LIBMTP=OFF \
    -DENABLE_SPARKLE=OFF \
    -DENABLE_VLC=OFF \
    -DENABLE_XINE=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
