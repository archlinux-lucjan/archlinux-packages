pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.3.r206.g161790f
pkgrel=2
pkgdesc='sched_ext schedulers and tools'
arch=('x86_64')
url="https://github.com/sched-ext/scx"
license=('GPL-2.0-only')
depends=('libelf' 'zlib' 'jq')
makedepends=('git' 'python' 'meson' 'clang' 'llvm' 'llvm-libs' 'rust')
backup=('etc/default/scx')
source=("git+https://github.com/sched-ext/scx"
        'lavd-monitor.patch')
sha256sums=('SKIP'
            '2299335f712a3f24cc732cefbc465cd0218c82d5d82a17783b30ae9c5db1ec09')
options=(!lto)
provides=("scx-scheds")
conflicts=("scx-scheds")

_backports=(
36154b45a0d797b4010b31c009b1acfe1410d9fd # scx_bpfland: add basic cpufreq support
ca2094a60c2d34601179a06cd62c823db670a837 # scx_bpfland: skip idle CPU selection for tasks with changing affinity
cbe4927380850bbc9b3ed4706be91e813a17190e # scx_bpfland: improve turbo domain CPU selection
7835db7b58abdfc58c8485ca881eeb2567ba0234 # scx_bpfland: dynamically adjust cpufreq level in auto mode
1de44d918c1f470a176dfd03104dc57518d8ca73 # scx_rusty: Support domain/core cookie policy
4021ace1cb2a50e8004f3769923fe0d387d6d80d # scx_rustland_core: avoid critical failures due by missing task context
97eeb96886e0959253275bba70bae42b53000471 # openrc: drop separate logs
)

_reverts=(
)

pkgver() {
  cd $_gitname
  # git describe
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
  # alternative
  # _ver="$(cat meson.build | grep -m1 version: | cut -d "'" -f2 | tr - .)"
  # echo "${_ver}.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}

prepare() {
 cd $_gitname

 local _c _l
  for _c in "${_backports[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git cherry-pick --mainline 1 --no-commit "${_c}"
  done
  for _c in "${_reverts[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git revert --mainline 1 --no-commit "${_c}"
  done

  local src
  for src in "${source[@]}"; do
    src="${src%%::*}"
    src="${src##*/}"
    [[ $src = *.patch ]] || continue
    echo "Applying patch $src..."
    patch -Np1 < "../$src"
  done
}

build() {
  cd $_gitname
  arch-meson . build -D openrc=disabled
  meson compile -C build
}

package() {
  cd $_gitname
  meson install -C build --destdir "${pkgdir}"
  install -Dm644 "LICENSE" "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
