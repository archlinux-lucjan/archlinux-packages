pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.5.r256.g3dcaefc
pkgrel=4
pkgdesc='sched_ext schedulers and tools'
arch=('x86_64')
url="https://github.com/sched-ext/scx"
license=('GPL-2.0-only')
depends=('libelf' 'zlib' 'jq')
makedepends=('git' 'python' 'meson' 'clang' 'llvm' 'llvm-libs' 'rust')
backup=('etc/default/scx')
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')
options=(!lto)
provides=("scx-scheds")
conflicts=("scx-scheds")

_backports=(
58fb11b5b9e49f98737552c3397ed25f4e5747bd # scheds: introduce scx_fair
523cee9af513ac2c45be9bfd4e39a5ea2bccb853 # scx_bpfland: reduce idle CPU selection overhead
86add4e662666562e12af62bbedd4b8fe0558775 # scx_bpfland: do not allow kthreads to preempt other tasks
e4364cc9cd09897d45c7039d54bb9de0abdbfea6 # scx_bpfland: use a pure vruntime scheduling policy in lowlatency mode
e82207f682db32affc3fd94d4d3d1087fdbc9a04 # scx_bpfland: evaluate nvcsw without using kernel metrics
85d265659309537a4ddb1f4c2660cac9a0cc594d # scx_bpfland: introduce --preempt-kthread
)

_reverts=(
)

pkgver() {
  cd $_gitname
  # git describe
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
  # alternative
  # _ver="$(cat meson.build | grep -m1 version: | cut -d "'" -f2 | tr - .)"
  # echo "${_ver}.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}

prepare() {
 cd $_gitname

 local _c _l
  for _c in "${_backports[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git cherry-pick --mainline 1 --no-commit "${_c}"
  done
  for _c in "${_reverts[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git revert --mainline 1 --no-commit "${_c}"
  done

  local src
  for src in "${source[@]}"; do
    src="${src%%::*}"
    src="${src##*/}"
    [[ $src = *.patch ]] || continue
    echo "Applying patch $src..."
    patch -Np1 < "../$src"
  done
}

build() {
  cd $_gitname
  arch-meson . build -D openrc=disabled
  meson compile -C build
}

package() {
  cd $_gitname
  meson install -C build --destdir "${pkgdir}"
}
