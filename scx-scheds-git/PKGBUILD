pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.15.r328.g4223ff77
pkgrel=1
pkgdesc='sched_ext schedulers and tools'
arch=('x86_64')
url="https://github.com/sched-ext/scx"
license=('GPL-2.0-only')
depends=(
  jq
  libseccomp
  libelf
  zlib
)
makedepends=(
  clang
  git
  llvm
  llvm-libs
  python
  rust
)
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')
options=(!lto)
provides=("scx-scheds" "scxctl")
conflicts=("scx-scheds" "scxctl")

_backports=(
e4fd69a4e51a06b6bbd4d494f48f2c839d29728a # scx_loader: Add chaos scheduler
1706bbc30517cfa33ff0361f72bdd9778c69ec6a # scx_loader: Add mitosis scheduler
a9903354d68c0e6314ab981fbac5a99ebbb58241 # scx_loader: Add wd40 scheduler
09a82e0f57c99399b7615a24a68fedfd974eb9f2 # scxctl: cache DBUS results to eliminate redundant calls
a6d4a7d7a4951337041b8f11d6802719258fbce4 # scxctl: optimize scheduler list display with iterator patterns
687d00fdfb979dcd02c5e0fb70d1d9ca5cbc5910 # scxctl: use &str parameters for string utility functions
95469ba43916ea764e98f0742673db81389a5e26 # scxctl: replace unwrap() calls with proper error handling
72133443704fd5754a269339d62b077247d3ac1f # scxctl: extract helper functions to reduce duplication
85652874af13b9fc11ba068bde898b978fb21654 # scxctl: simplify string processing utility functions
a186f40a816d423256cfadd8ab4bfa826eebe84e # scxctl: some Rust formatting changes to satisfy the CI
)

_reverts=(
)

pkgver() {
  cd $_gitname
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd $_gitname

  local _c _l
   for _c in "${_backports[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git cherry-pick --mainline 1 --no-commit "${_c}"
   done
   for _c in "${_reverts[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git revert --mainline 1 --no-commit "${_c}"
   done

   local src
   for src in "${source[@]}"; do
     src="${src%%::*}"
     src="${src##*/}"
     [[ $src = *.patch ]] || continue
     echo "Applying patch $src..."
     patch -Np1 < "../$src"
   done

   cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd $_gitname
  export CARGO_TARGET_DIR=target
  cargo build \
     --release \
     --workspace \
     --locked \
     --frozen \
     --exclude vmlinux_docify \
     --exclude scx_lib_selftests
}

# Only for stable releases. Compilation time increases twice
#check() {
