pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.9.r305.g997faad2
pkgrel=3
pkgdesc='sched_ext schedulers and tools'
arch=('x86_64')
url="https://github.com/sched-ext/scx"
license=('GPL-2.0-only')
depends=('libelf' 'zlib' 'jq')
makedepends=('git' 'python' 'meson' 'clang' 'llvm' 'llvm-libs' 'rust')
backup=('etc/default/scx')
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')
options=(!lto)
provides=("scx-scheds")
conflicts=("scx-scheds")

_backports=(
9a1d58ca5c34b23137bcbc59cf4af2f41c45bbb1 # scheds: Introduce scx_tickless
8ad9fcf741468184234d47ae820c005c0f92c4b5 # scx_loader: Add scx_tickless scheduler
0ae2ae1fb8e059a2f11df097ab7020b734af9b60 # ci: enable testing for scx_tickless
8dcd92f494d96181eebf233be261dbc4466422c9 # scx_tickless: Dispatch tasks from BPF timers
fd96e46a490bdb150de58b7159ff6982f7faaf0e # scx_utils: Add a utility function to load a tracepoint conditionally.
d9906cfd788b7577adb7449a15623d433d837357 # scx_lavd: Enable futex boost only when tracepoints are available.
5206d6088af45bbf36deebc2d293c0455d018398 # scx_lavd: Add a command line option, no-futex-boost.
)

_reverts=(
)

pkgver() {
  cd $_gitname
  # git describe
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
  # alternative
  # _ver="$(cat meson.build | grep -m1 version: | cut -d "'" -f2 | tr - .)"
  # echo "${_ver}.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}

prepare() {
 cd $_gitname

 local _c _l
  for _c in "${_backports[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git cherry-pick --mainline 1 --no-commit "${_c}"
  done
  for _c in "${_reverts[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git revert --mainline 1 --no-commit "${_c}"
  done

  local src
  for src in "${source[@]}"; do
    src="${src%%::*}"
    src="${src##*/}"
    [[ $src = *.patch ]] || continue
    echo "Applying patch $src..."
    patch -Np1 < "../$src"
  done
}

build() {
  cd $_gitname
  arch-meson . build -D openrc=disabled -D cargo_home="$srcdir"/scx
  meson compile -C build
}

package() {
  cd $_gitname
  meson install -C build --destdir "${pkgdir}"
}
