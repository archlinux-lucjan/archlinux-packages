pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.16.r238.g3b3f964d
pkgrel=1
pkgdesc='sched_ext schedulers and tools'
url='https://github.com/sched-ext/scx'
arch=('x86_64')
license=('GPL-2.0-only')
depends=(
  jq
  libseccomp
  libelf
  zlib
)
makedepends=(
  cargo
  clang
  git
  llvm
  llvm-libs
  python
)
options=(!lto)
provides=("scx-scheds" "scxctl")
conflicts=("scx-scheds" "scxctl")
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')

_backports=(
19026824d26c82c247b7b114b3997f996078c422 # scx_cosmos: Improve SMT handling
4aa1e1c625d1b174b63834070ebc2bc102728df0 # scx_cosmos: Prioritize faster CPUs
3d0f351e720b258a425336b3b5ba8fca6efa6afe # scx_cosmos: Drop flat/preferred idle scan
f6b9fbc5574568c09a9b9c47709958cd7ba79070 # scx_bpfland: Rework idle CPU selection and scheduling policy
5ffa2860651229f95f75af2ebab22bae5af58a52 # scx_bpfland: Introdue --wake-affine
8aef11a0f5e6ac5773d5752022d4e59cf6513f3a # scheds: Introduce scx_beerland
470c44d9df6e2a63a6b9e3be84ebd0dc6e57a1ae # scx_loader: Add beerland scheduler
c537611f65558e4b8605f2033641a888b877b441 # EXPERIMENTAL: scx_beerland: Use lockless peek (requires kernel patch)
c1b977f3dec8b155dc34a6f9a0501f002d8f3158 # scx_beerland: Better SMT handling
ddaf19b12386c46255e184ddf9b08fe881f74fc1 # scx_beerland: Prevent migrations for non-overloaded CPUs
1f41767402b4f11ed94d08225bdd64e3ee40bdaf # scx_beerland: Re-enqueue tasks on CPU preempted by a higher sched class
365bacc95fbae63509a233664eb2373f94ae8836 # scx_loader: Add chaos scheduler
b4905c9d3f15e4a224426d6b3f26b0be96c30a36 # scx_loader: Error when non-auto modes do not have args
76861029fbcf3f64c11788aef966d86750350929 # scxctl: Implement error handling
)

_reverts=(
)

pkgver() {
  cd $_gitname
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd $_gitname

  local _c _l
   for _c in "${_backports[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git cherry-pick --mainline 1 --no-commit "${_c}"
   done
   for _c in "${_reverts[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git revert --mainline 1 --no-commit "${_c}"
   done

   export RUSTUP_TOOLCHAIN=stable
   cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd $_gitname
  export RUSTUP_TOOLCHAIN=stable
  export CARGO_TARGET_DIR=target
  cargo build \
     --release \
     --frozen \
     --all-features \
     --workspace \
     --exclude scx_rlfifo \
     --exclude scx_mitosis \
     --exclude scx_wd40 \
     --exclude scxcash \
     --exclude xtask \
     --exclude vmlinux_docify \
     --exclude scx_arena_selftests
}

