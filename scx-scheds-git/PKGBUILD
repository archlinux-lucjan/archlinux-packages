pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.16.r30.g982b7e2e
pkgrel=4
pkgdesc='sched_ext schedulers and tools'
arch=('x86_64')
url="https://github.com/sched-ext/scx"
license=('GPL-2.0-only')
depends=(
  jq
  libseccomp
  libelf
  zlib
)
makedepends=(
  clang
  git
  llvm
  llvm-libs
  python
  rust
)
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')
options=(!lto)
provides=("scx-scheds" "scxctl")
conflicts=("scx-scheds" "scxctl")

_backports=(
d3859ce623d7e03e999a4af8bc7f6c151b06be6c # scx_loader: Add chaos scheduler
d024d35174240ebd1ff64a3b45119a6c01038821 # scx_loader: Add mitosis scheduler
dd5c98cd24365b15cae60d579d5b0dba32c1f52e # scx_loader: Add wd40 scheduler
cb4c77c055049ca66f52535aff759ddaa147d5f1 # scxctl: cache DBUS results to eliminate redundant calls
1353fc0a903abbbaae506dba89e8304eb904d3c5 # scxctl: optimize scheduler list display with iterator patterns
1ad270381683d40080d0ed0a1a7dc2dc206ba133 # scxctl: use &str parameters for string utility functions
94108b8af962df7c61b35545c6b8492df342d7b0 # scxctl: replace unwrap() calls with proper error handling
792fa2360a615faecda309650ba2106209be7f40 # scxctl: extract helper functions to reduce duplication
6ea927e1c36a64592cc8f0d283085659bf3fa45c # scxctl: simplify string processing utility functions
7d576dd66936cd863f1c1f40644c167300c50a03 # scxctl: some Rust formatting changes to satisfy the CI
)

_reverts=(
)

pkgver() {
  cd $_gitname
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd $_gitname

  local _c _l
   for _c in "${_backports[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git cherry-pick --mainline 1 --no-commit "${_c}"
   done
   for _c in "${_reverts[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git revert --mainline 1 --no-commit "${_c}"
   done

   local src
   for src in "${source[@]}"; do
     src="${src%%::*}"
     src="${src##*/}"
     [[ $src = *.patch ]] || continue
     echo "Applying patch $src..."
     patch -Np1 < "../$src"
   done

   cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd $_gitname
  export CARGO_TARGET_DIR=target
  cargo build \
     --release \
     --workspace \
     --locked \
     --frozen \
     --exclude scx_rlfifo \
     --exclude vmlinux_docify \
     --exclude arenalib_selftests
}

# Only for stable releases. Compilation time increases twice
#check() {
