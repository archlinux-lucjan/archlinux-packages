pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.10.r9.g0543264e
pkgrel=1
pkgdesc='sched_ext schedulers and tools'
arch=('x86_64')
url="https://github.com/sched-ext/scx"
license=('GPL-2.0-only')
depends=('libelf' 'zlib' 'jq')
makedepends=('git' 'python' 'meson' 'clang' 'llvm' 'llvm-libs' 'rust')
backup=('etc/default/scx')
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')
options=(!lto)
provides=("scx-scheds" "scxctl")
conflicts=("scx-scheds" "scxctl")

_backports=(
0befb50ee9bf0937b57cfd6eca717367c8b9e507 # scx_flash: Rely on the built-in idle CPU selection policy
00c12cdc8c01b91d338fd54d5a62e306c4c571d7 # scx_flash: Redesign scheduling policy
045db0ef813793583edf4b5ec574e40590cc287d # scxctl: Initial code merge
e68d6c2eebce69715a17893beba8ec12b872282f # scxctl: Update repo link
7ea0e74a74b4e2314c42bee1b905b152b5a68a05 # scxctl: Cleanup description
527b2ea81fe460ba17cbe65f33dbea81ee443651 # scxctl: Relicense to GPL-2.0
3956a43e1566c71e1e3f0e4f316ebf14e331c333 # scxctl: Sync version with scx version
91554410fc21d50651009ff7ec3f1ab9607b0dbe # scxctl: Add to main Cargo build
bbe3c406ae86f5adbe7b8480380918f80f158abc # scxctl: bump version to 1.0.10.
)

_reverts=(
)

pkgver() {
  cd $_gitname
  # git describe
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
  # alternative
  # _ver="$(cat meson.build | grep -m1 version: | cut -d "'" -f2 | tr - .)"
  # echo "${_ver}.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}

prepare() {
 cd $_gitname

 local _c _l
  for _c in "${_backports[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git cherry-pick --mainline 1 --no-commit "${_c}"
  done
  for _c in "${_reverts[@]}"; do
    if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
    git log --oneline "${_l}" "${_c}"
    git revert --mainline 1 --no-commit "${_c}"
  done

  local src
  for src in "${source[@]}"; do
    src="${src%%::*}"
    src="${src##*/}"
    [[ $src = *.patch ]] || continue
    echo "Applying patch $src..."
    patch -Np1 < "../$src"
  done
}

build() {
  cd $_gitname
  arch-meson . build -D openrc=disabled -D cargo_home="$srcdir"/scx
  meson compile -C build
}

package() {
  cd $_gitname
  meson install -C build --destdir "${pkgdir}"
}
