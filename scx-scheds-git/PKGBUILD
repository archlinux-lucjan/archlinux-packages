pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.17.r82.g9d87bfac
pkgrel=1
pkgdesc='sched_ext schedulers and tools'
url='https://github.com/sched-ext/scx'
arch=('x86_64')
license=('GPL-2.0-only')
depends=(
  jq
  libseccomp
  libelf
  zlib
)
makedepends=(
  cargo
  clang
  git
  llvm
  llvm-libs
  python
)
options=(!lto)
provides=("scx-scheds" "scxctl")
conflicts=("scx-scheds" "scxctl")
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')

_backports=(
5da56e503b2f92c473a5b0b537f71b351212c510 # scx_cosmos: Improve SMT handling
3ec336add33c744cce9da10d2ca6342dcedc7d7c # scx_cosmos: Prioritize faster CPUs
01a71c6dddfc7cb136a214261e40f44797a2563a # scx_cosmos: Drop flat/preferred idle scan
9a0d374cb640c41228858e047b839c3f8421ad29 # scheds: Introduce scx_beerland
7a0912513901d7d9971afcfb75284de6b0b4c69e # scx_loader: Add beerland scheduler
381691eab2825af4bcb015c38dc45a6df4a07c87 # EXPERIMENTAL: scx_beerland: Use lockless peek (requires kernel patch)
a3321d625533d374db2eaf720be3cd7686da5255 # scx_beerland: Better SMT handling
168ec380fdab0d4cadef914ea6e0fb7f6f8e4676 # scx_beerland: Prevent migrations for non-overloaded CPUs
8f7778692b5ef17386bc1d718c2235705be1a673 # scx_beerland: Re-enqueue tasks on CPU preempted by a higher sched class
4c9b71e334ddcd81ac6776a823616f4f33d13887 # scx_loader: Add chaos scheduler
395e7732d40a43113771c5ae001e2783ba73e20a # scx_loader: Error when non-auto modes do not have args
44b81a43e40dccd8f2443830ff8536070b0a5380 # scxctl: Implement error handling
)

_reverts=(
)

pkgver() {
  cd $_gitname
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd $_gitname

  local _c _l
   for _c in "${_backports[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git cherry-pick --mainline 1 --no-commit "${_c}"
   done
   for _c in "${_reverts[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git revert --mainline 1 --no-commit "${_c}"
   done

   export RUSTUP_TOOLCHAIN=stable
   cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd $_gitname
  export RUSTUP_TOOLCHAIN=stable
  export CARGO_TARGET_DIR=target
  cargo build \
     --release \
     --frozen \
     --all-features \
     --workspace \
     --exclude scx_rlfifo \
     --exclude scx_mitosis \
     --exclude scx_wd40 \
     --exclude scxcash \
     --exclude xtask \
     --exclude vmlinux_docify \
     --exclude scx_arena_selftests
}

#check() {
