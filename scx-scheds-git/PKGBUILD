pkgname=scx-scheds-git
_gitname=scx
pkgver=1.0.17.r156.g593fb51a
pkgrel=1
pkgdesc='sched_ext schedulers and tools'
url='https://github.com/sched-ext/scx'
arch=('x86_64')
license=('GPL-2.0-only')
depends=(
  jq
  libseccomp
  libelf
  zlib
)
makedepends=(
  cargo
  clang
  git
  llvm
  llvm-libs
  python
)
options=(!lto)
provides=("scx-scheds" "scxctl")
conflicts=("scx-scheds" "scxctl")
source=("git+https://github.com/sched-ext/scx")
sha256sums=('SKIP')

_backports=(
77000497e4bd1b5e213eee53e01245b733304849 # scheds: Introduce scx_beerland
46b6b340ab05c7c4bb57898baad31e0339017bf1 # scx_loader: Add beerland scheduler
b9e5217ffcb43020ad02d9d845284f2e1ec96541 # EXPERIMENTAL: scx_beerland: Use lockless peek (requires kernel patch)
aa4494616ba4829e18e98c5f913ef18c734daac5 # scx_beerland: Better SMT handling
18b157c0255f7f94eed1f896702b0d602cf7c42d # scx_beerland: Prevent migrations for non-overloaded CPUs
7f47b7fd9fee459f8892b899973ce1c7232b6f50 # scx_beerland: Re-enqueue tasks on CPU preempted by a higher sched class
6a1ae286c6cca31a2695b6bfcc7f65955323efa2 # scx_loader: Add chaos scheduler
fee866912c1f55aedb7f817ae0b050d6644388e2 # scx_loader: Error when non-auto modes do not have args
930ddca8fc55ecce7ad16f2a574f7c7ae7a2d06b # scxctl: Implement error handling
53ea0abae3d9277e51b43e4e50fab359adddc25b # scx_cosmos: Improve SMT handling
9692caaec3df8cceb4e2c0384b7f9386e2fa15d3 # scx_cosmos: CPU capacity awareness
)

_reverts=(
)

pkgver() {
  cd $_gitname
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd $_gitname

  local _c _l
   for _c in "${_backports[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git cherry-pick --mainline 1 --no-commit "${_c}"
   done
   for _c in "${_reverts[@]}"; do
     if [[ "${_c}" == *..* ]]; then _l='--reverse'; else _l='--max-count=1'; fi
     git log --oneline "${_l}" "${_c}"
     git revert --mainline 1 --no-commit "${_c}"
   done

   export RUSTUP_TOOLCHAIN=stable
   cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd $_gitname
  export RUSTUP_TOOLCHAIN=stable
  export CARGO_TARGET_DIR=target
  cargo build \
     --release \
     --frozen \
     --all-features \
     --workspace \
     --exclude scx_rlfifo \
     --exclude scx_mitosis \
     --exclude scx_wd40 \
     --exclude scxcash \
     --exclude xtask \
     --exclude vmlinux_docify \
     --exclude scx_arena_selftests
}

