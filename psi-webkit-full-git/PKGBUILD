### BUILD OPTIONS
# Set these variables to ANYTHING that is not null to enable them
_dev_plugins=
### Do not edit below this line unless you know what you're doing

pkgname=psi-webkit-full-git
pkgver=1.4.934.g977558fa
pkgrel=1
pkgdesc="Psi is a powerful XMPP client (Qt, C++) designed for the XMPP power users (built with Qt 5.x and Webkit) with plugins"
url="https://psi-plus.com"
license=('GPL2')
arch=('x86_64')
depends=('qt5-base' 'qt5-webengine' 'qt5-webkit' 'qt5-multimedia' 'qt5-x11extras' 'qca-qt5'
	 'libidn' 'libxss' 'qt5-svg' 'hunspell' 'qtkeychain')
makedepends=('git' 'cmake' 'libotr' 'tidy' 'libsignal-protocol-c')
optdepends=('libotr: for OTR plugin'
            'tidy: for OTR plugin'
            'libsignal-protocol-c: for omemoplugin')
provides=('psi' 'psi-qt5-git' 'psi-git')
conflicts=('psi' 'psi-qt5-git' 'psi-git')
source=('git://github.com/psi-im/psi.git'
        'git://github.com/psi-im/iris.git'
        'git://github.com/psi-im/libpsi.git'
        'git://github.com/psi-im/plugins')
sha256sums=('SKIP'
            'SKIP'
            'SKIP'
            'SKIP')

pkgver() {
  cd psi
  git describe --long --tags | sed 's/^v//;s/-/./g'
}

prepare() {
  cd psi

  # makepkg doesn't support --recursive
  # so setup git modules manually
  git submodule init
  git config submodule.iris.url "$srcdir/iris"
  git config submodule.src/libpsi.url "$srcdir/libpsi"
  # git submodule update
  git submodule update --remote

  # copy to proper path
  cp -r $srcdir/plugins $srcdir/psi/src/
}

build() {
  cd psi
  mkdir -p build
  cd build
  if [ -n "$_dev_plugins" ]; then
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DPSI_PLUS=OFF -DCHAT_TYPE=WEBKIT -DENABLE_PLUGINS=ON -DBUILD_DEV_PLUGINS=ON ..
  else
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DPSI_PLUS=OFF -DCHAT_TYPE=WEBKIT -DENABLE_PLUGINS=ON ..
  fi
  make
}

package() {
  cd psi/build

  make DESTDIR="$pkgdir" install
}
