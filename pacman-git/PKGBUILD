pkgname=pacman-git
pkgver=6.0.0alpha1.1.g11e09a23
pkgrel=1
pkgdesc="A library-based package manager with dependency support. git version."
arch=('x86_64')
url="http://www.archlinux.org/pacman/"
license=('GPL')
depends=('bash' 'glibc' 'libarchive' 'curl'
         'gpgme' 'pacman-mirrorlist' 'archlinux-keyring')
makedepends=('asciidoc' 'git' 'meson')
checkdepends=('python' 'fakechroot')
optdepends=('perl-locale-gettext: translation support in makepkg-template')
backup=(etc/pacman.conf
        etc/makepkg.conf)
provides=("pacman=$pkgver" 'libalpm.so')
conflicts=('pacman')
options=('strip' 'debug')
source=(git://git.archlinux.org/pacman.git
        pacman.conf
        makepkg.conf
        0001-meson-update-version-and-libalpm_version.patch)
sha1sums=('SKIP'
          '78a8b65d17529189fccae2d64ab8ce41fe02a352'
          'efa94cc2b0c635bb21b8d1281a5567247716a621'
          'c8fb51f5d6b37fd2acf0d5111ff596849313e787')

pkgver() {
  cd pacman
  git describe --long | sed 's/^v//;s/-/./g'
}

prepare() {
  cd pacman
  ### Patching sources
  local src
  for src in "${source[@]}"; do
    src="${src%%::*}"
    src="${src##*/}"
    [[ $src = *.patch ]] || continue
    msg2 "Applying patch $src..."
    patch -Np1 < "../$src"
  done
}

local _meson_options=(
    -Ddoc=enabled
    -Duse-git-version=true
    -Dscriptlet-shell=/usr/bin/bash
    -Dldconfig=/usr/bin/ldconfig
)

build() {
  arch-meson pacman build  "${_meson_options[@]}"
    
  ninja -C build
}

check() {
  meson test -C build
}

package() {
  
  DESTDIR="$pkgdir" ninja -C build install

  # install Arch specific stuff
  install -dm755 "$pkgdir/etc"
  install -m644 "$srcdir/pacman.conf" "$pkgdir/etc"
  install -m644 "$srcdir/makepkg.conf" "$pkgdir/etc"
}
