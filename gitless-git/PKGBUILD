# Maintainer: Piotr Gorski <lucjan.lucjanov@gmail.com>

pkgname=gitless-git
_pkgname=gitless
pkgver=0.8.7.r3.gf3a44c8
pkgrel=5
pkgdesc="A scientifically proven easier-to-use git interface"
arch=("any")
url="http://gitless.com/"
license=("GPL")
depends=('python' 'git' 'python-sh' 'python-clint' 'python-pygit2>=0.28.1' 'python-setuptools')
makedepends=('git')
conflits=('gitless')
provides=('gitless')
source=("git://github.com/sdg-mit/gitless/"
        "0001-Bump-to-pygit2-0.28.1.patch")
sha256sums=('SKIP'
            '73e2fbadf39cca72182817df84d50ff5f8fbbecb500e160d3848271562017420')


prepare() {
  cd ${srcdir}/${_pkgname}
  patch -Np1 -i ../0001-Bump-to-pygit2-0.28.1.patch
 } 

pkgver() {
  cd ${srcdir}/${_pkgname}
  git describe --long --tags | sed 's/v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd ${srcdir}/${_pkgname}
  python setup.py build
}

package() {
  cd ${srcdir}/${_pkgname}
  python setup.py install --root=${pkgdir} --optimize=1 --skip-build
}
