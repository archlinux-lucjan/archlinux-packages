# Contributor: Sergej Pupykin <arch+pub@sergej.pp.ru>
# Contributor: Alexey D. <lq07829icatm@rambler.ru>

### BUILD OPTIONS
# Set these variables to ANYTHING that is not null to enable them
_dev_plugins=
### Do not edit below this line unless you know what you're doing

pkgname=psi-plus-webkit-full-git
pkgver=1.3.272.0.ge9a5415d
pkgrel=1
pkgdesc="Psi+ is a powerful XMPP client (Qt, C++) designed for the XMPP power users (built with Qt 5.x and Webkit) with plugins"
url="https://psi-plus.com"
license=('GPL2')
arch=('x86_64')
depends=('qt5-base' 'qt5-webengine' 'qt5-webkit' 'qt5-multimedia' 'qt5-x11extras' 'qca-qt5'
	 'libidn' 'libxss' 'qt5-svg' 'hunspell' 'qtkeychain')
makedepends=('git' 'cmake' 'libotr' 'tidy' 'libsignal-protocol-c')
optdepends=('libotr: for OTR plugin'
            'tidy: for OTR plugin'
            'libsignal-protocol-c: for omemoplugin')
provides=("psi-plus=$pkgver" "psi-plus-git=$pkgver" "psi-plus-qt5-git=$pkgver"
          "psi-plus-plugins=$pkgver"  "psi-plus-plugins-git=$pkgver" "psi-plus-webkit-qt5-git=$pkgver"
          "psi-plus-webkit-git=$pkgver")
conflicts=('psi-plus' 'psi-plus-qt5-git' 'psi-plus-webkit-qt5-git' 'psi-plus-webkit-git' 
           'psi-plus-git' 'psi-plus-plugins' 'psi-plus-plugins-git' 'psi-plus-full-git'
           'psi-plus-webengine-git')
source=("git://github.com/psi-plus/psi-plus-snapshots"
	'join.patch')
sha256sums=('SKIP'
            'ea25a58c7efe25979b8d257598608187380e8f35ace25e96cab9c357dcdbc974')

pkgver() {
  cd psi-plus-snapshots
  git describe --long --tags | sed 's/^v//;s/-/./g'
}            
            
prepare() {
  cd psi-plus-snapshots
  patch -p1 <"$srcdir"/join.patch
}

build() {
  cd psi-plus-snapshots
  mkdir -p build
  cd build
  if [ -n "$_dev_plugins" ]; then
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DUSE_WEBKIT=ON -DENABLE_PLUGINS=ON -DBUILD_DEV_PLUGINS=ON ..
  else
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release -DUSE_WEBKIT=ON -DENABLE_PLUGINS=ON ..
  fi
  make
}

package() {
  cd psi-plus-snapshots/build

  make DESTDIR="$pkgdir" install
}
