pkgname=libgpg-error-git
pkgver=1.27.r16.g0f5c3f6
pkgrel=1
pkgdesc="Support library for libgcrypt"
arch=(x86_64)
url="http://www.gnupg.org"
license=('LGPL')
depends=('glibc' 'sh')
makedepends=('transfig')
conflicts=('libgpg-error')
provides=('libgpg-error')
source=(git://git.gnupg.org/libgpg-error.git)
	#ftp://ftp.franken.de/pub/crypt/mirror/ftp.gnupg.org/gcrypt/libgpg-error/${pkgname}-${pkgver}.tar.bz2)
# https://www.gnupg.org/download/integrity_check.html
sha1sums=('SKIP')
#validpgpkeys=('D8692123C4065DEA5E0F3AB5249B39D24F25E3B6') # Werner Koch

pkgver() {
  cd libgpg-error
  git describe --tags --long | sed 's/^libgpg-error.//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd libgpg-error
  ./autogen.sh
  ./configure --prefix=/usr \
  --enable-maintainer-mode
  make
}

#check() {
#  cd libgpg-error
#  make check
#}

package() {
  cd libgpg-error
  make DESTDIR="${pkgdir}/" install
}
